<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="colorPrimaryLight" format="color"/>
    <attr name="title" format="string"/>
    <attr name="subtitle" format="string"/>
    <attr name="image" format="reference"/>
    <attr name="textColor" format="color"/>
    <attr name="subtitleColor" format="color"/>
    <attr name="enabled" format="boolean"/>

    <declare-styleable name="BetterButton">
        <attr name="title"/>
        <attr name="subtitle"/>
        <attr name="image"/>
        <attr name="textColor"/>
        <attr name="subtitleColor"/>
        <attr name="enabled"/>
    </declare-styleable>

    <declare-styleable name="BetterCheckbox">
        <attr name="title"/>
        <attr name="subtitle"/>
        <attr name="image"/>
        <attr name="textColor"/>
        <attr name="subtitleColor"/>
        <attr name="checked" format="boolean" />
        <attr name="enabled"/>
    </declare-styleable>
</resources>